{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "noImplicitOverride": true,
    "stripInternal": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"]
    }
  }
}
